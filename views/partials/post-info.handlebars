<article class="border-box post">
  <div class="blog-post-header title">
    <h2>
      {{title}} <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </h2>

  </div>
  <div class="post-message">{{message}}</div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}

    |
    
  </div>
</article>