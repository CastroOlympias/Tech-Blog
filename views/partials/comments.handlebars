<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </div>
  </section>
  {{/each}}
</div>