{{> post-info post}}

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea placeholder="Please enter a comment" class="h3" name="comment-body"></textarea>
  </div>

  <div class="center">
    <button class="h2 comment-vote" type="submit">Post Comment</button>
    <button type="button" class="h2 comment-vote upvote-btn">Like</button>
  </div>
</form>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}