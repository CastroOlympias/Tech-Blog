<article>
  <section class="border-box">
  <div class="blog-post-header">
    <h2 class="h2">Edit Your Blog Post</h2>
  </div>
  <div class="medium-padding">
  <form class="edit-post-form">
    <div>
      <textarea class="h3 post-title" name="post-title" type="text" value="${{post.title}}">{{post.title}}</textarea>
      <textarea class="h3 post-message" name="post-message" type="text" value="${{post.message}}">{{post.message}}</textarea>
    </div>
    <div>
      {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
      {{comment_text}}
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
  </div>
</section>
</article>

<form class="comment-form post">
  <div>
    <textarea placeholder="Please enter a comment" class="h3" name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>